<idea-plugin>
  <id>info.rayden.voldeskine.dependencies</id>
  <name>Clear Dependencies</name>
  <version>1.0</version>
  <vendor email="andrei.sedelnikov@gmail.com" url="https://github.com/raydenvoldeskine/clear-dependencies-plugin">Andy Victors</vendor>

  <description><![CDATA[
      Shows incoming and outgoing dependencies for currently open Java class.
    ]]></description>


  <idea-version since-build="182.0"/>

  <depends>org.jetbrains.android</depends>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="Dependencies"
                icon="/Resources/plus.png"
                anchor="right"
                factoryClass="DependenciesToolWindowFactory"/>

  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>